<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.databinding.adapters.Converters" />
        <import type="com.example.owner.myfruitapplication.dto.FruitDto" />
        <import type="android.view.View" />

        <import type="com.example.owner.myfruitapplication.R" />

        <variable
            name="fruitDto"
            type="com.example.owner.myfruitapplication.dto.FruitDto" />
    </data>

    <android.support.v7.widget.CardView
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/cardview_default_elevation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp">

            <TextView
                android:lines="1"
                android:id="@+id/txtWeight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="8dp"
                android:text="@{@string/product_weight(fruitDto.weight)}"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Name" />

            <TextView
                android:lines="1"
                android:id="@+id/txtPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:text="@{@string/product_price(fruitDto.price)}"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtWeight"
                tools:text="description" />

            <TextView
                android:id="@+id/txtType"
                android:textStyle="italic"
                android:textSize="26dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{fruitDto.type}"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>